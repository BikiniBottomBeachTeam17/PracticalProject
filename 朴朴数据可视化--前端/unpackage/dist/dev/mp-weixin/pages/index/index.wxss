.nav {
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  height: 250rpx;
  width: 100%;
  background-color: #0c3761;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.nav .titleBox {
  width: 60%;
  margin: 0 auto;
  border-bottom: 10rpx solid #ff5500;
  text-align: center;
}
.nav .titleBox .title {
  font-size: 50rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.nav .searchBox {
  margin: 0 auto;
  margin-top: 30rpx;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 5rpx;
  text-align: center;
}
.nav .searchBox .search {
  color: #a0a0a0;
  font-size: 35rpx;
}
.content {
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.content .goodsCard {
  border: 1rpx solid #e1e1e1;
  border-radius: 10rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
  width: 48%;
  margin: 1%;
  float: left;
}
.content .goodsCard .goodsImgBox {
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
}
.content .goodsCard .goodsImgBox .goodsImg {
  width: 100%;
  height: 100%;
}
.content .goodsCard .goodsNameBox {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
  font-weight: bold;
}
.content .goodsCard .goodsSubTitle {
  margin: 10rpx 0;
  font-size: 20rpx;
  color: #787878;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .goodsCard .goodsInfo {
  height: 60rpx;
  line-height: 60rpx;
}
.content .goodsCard .goodsInfo .goodsPrice {
  font-size: 40rpx;
  font-weight: bolder;
  color: #ff5500;
}
.content .goodsCard .goodsInfo .goodsOrigin {
  float: right;
  font-size: 20rpx;
  color: #787878;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 160rpx;
  text-align: right;
}
.tabbar {
  position: fixed;
  width: 100%;
  bottom: 0;
  border-top: 1rpx solid #f5f5f5;
}

